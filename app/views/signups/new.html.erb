<% if flash[:my_errors] %>
<% flash[:my_errors].each do |error| %>
<p>Error: <%= error%>!</p>
<% end%>
<% end%>

<%= form_for @signup do |f| %>
<%= f.label :time %>
<%= f.number_field :time %>

<%= f.label :camper_id %>
<%= f.collection_select :camper_id, Camper.all, :id, :name %>

<%= f.label :activity_id %>
<%= f.collection_select :activity_id, Activity.all, :id, :name %>

<%= f.submit %>
<% end%>